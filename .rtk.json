{
  "resources": [
    {
      "path": "conf/packer/vars/docker.json",
      "type": "json",
      "params": {
        "property": "version"
      }
    },
    {
      "path": "Makefile",
      "type": "makefile",
      "params": {
        "variable": "version"
      }
    },
    {
      "path": "CHANGELOG.md",
      "type": "keep-a-changelog"
    },
    {
      "path": ".github/workflows/publish-docker-workflow.yaml",
      "type": "yaml",
      "params": {
        "property": "jobs.build.steps[0].with.ref",
        "post_release_value": "main"
      }
    }
  ]
}