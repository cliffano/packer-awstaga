{
  "variables": {
    "docker_source": "",
    "tmp_dir": "/tmp/packer-awstaga",
    "version": "x.x.x"
  },
  "provisioners": [
    {
      "inline": [
        "mkdir -p {{user `tmp_dir`}}"
      ],
      "type": "shell"
    },
    {
      "type": "shell",
      "script": "provisioners/init.sh"
    },
    {
      "type": "ansible-local",
      "playbook_file": "provisioners/ansible/playbook/awstaga.yaml",
      "group_vars": "conf/ansible/inventory/group_vars/",
      "inventory_groups": "defaults"
    },
    {
      "type": "shell",
      "script": "provisioners/info.sh"
    }
  ],
  "builders": [
    {
      "type": "docker",
      "image": "{{user `docker_source`}}",
      "commit": true,
      "run_command": [
        "--privileged",
        "-e",
        "container=docker",
        "-v",
        "/sys/fs/cgroup:/sys/fs/cgroup",
        "-d",
        "-i",
        "-t",
        "{{.Image}}"
      ],
      "changes": [
        "ENV LANG en_US.UTF-8",
        "ENV PATH /usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin",
        "ENTRYPOINT [\"awstaga\"]"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "cliffano/awstaga",
      "tag": "latest",
      "only": [
        "docker"
      ]
    },
    {
      "type": "docker-tag",
      "repository": "cliffano/awstaga",
      "tag": "{{user `version`}}",
      "only": [
        "docker"
      ]
    }
  ]
}